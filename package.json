{
  "name": "templatenodets",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "d:dev": "docker-compose -f docker/docker-compose.yaml up",
    "d:down": "docker-compose -f docker/docker-compose.yaml down",
    "dev": "export NODE_OPTIONS=\"--max-old-space-size=4096\" && NODE_PATH=./src ts-node-dev --poll --respawn --pretty --transpile-only src/index.ts",
    "start": "export NODE_OPTIONS=\"--max-old-space-size=8192\" && NODE_PATH=dist/ node ./dist/index.js",
    "drb": "docker build -t \"aspback\" . -f ./docker/Dockerfile && docker run -d -p 80:80 --name aspback -v \"aspback:/var/log\" --env-file ./env ",
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix",
    "prepare": "if [[ $NODE_ENVIRONMENT != \"production\" ]]; then husky install; fi"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "4.3.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "helmet": "^5.1.0",
    "inversify": "^6.0.1",
    "log4js": "^6.6.1",
    "mongoose": "^6.3.4",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "babel-jest": "^29.0.2",
    "eslint": "^8.16.0",
    "husky": ">=6",
    "jest": "^28.0.2",
    "lint-staged": ">=10",
    "prettier": "^2.6.2",
    "prisma": "^4.3.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.4"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.--fix": "prettier --write"
  }
}
